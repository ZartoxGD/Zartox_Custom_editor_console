#userCommandTextField > #unity-text-input {
    -unity-font-style: normal;
    min-width: 350px;
    color: rgba(210, 210, 210, 0.49);
    max-width: 500px;
}

#userCommandTextField > Label {
    -unity-font-style: normal;
    width: auto;
    min-width: 90px;
}

.logLabel {
    background-color: rgba(255, 0, 0, 0);
}

.logLabel:hover {
    background-color: rgba(255, 255, 255, 0.06);
}

.logLabel:focus {
    background-color: rgba(255, 255, 255, 0.12);
}
